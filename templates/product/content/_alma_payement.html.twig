<form action="{{path('payement')}}" method="POST">
	{% include 'product/content/_installments.html.twig' %}
	<h2>
		Passer la commande
	</h2>
	<h5 class="mb-4 text-primary">
		Vos informations personnelles</h5>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label class="col-4" for="last_name">Nom</label>
			<input type="text" class="col-7" name="last_name" id="last_name" value="{{customer.customer.last_name}}">
		</div>
		<div class="form-group col-md-6">
			<label class="col-4" for="first_name">Prénom</label>
			<input type="text" class="col-7" name="first_name" id="first_name" value="{{customer.customer.first_name}}">
		</div>
	</div>

	<div class="form-row">
		<div class="form-group col-md-6">
			<label class="col-4" for="email">E-mail</label>
			<input type="text" class="col-7" name="email" id="email" value="{{customer.customer.email}}">
		</div>
		<div class="form-group col-md-6">
			<label class="col-4" for="phone">Téléphone</label>
			<input type="text" class="col-7" name="phone" id="phone" value="{{customer.customer.phone}}">
		</div>
	</div>
	<h5 class="mb-4 text-primary">
		Adresse de livraison</h5>

	<div class="form-row">
		<div class="form-group col-md-6">
			<label class="col-4" for="line1">Adresse</label>
			<input type="text" class="col-7" name="line1" id="line1" value="{{customer.shipping_address.line1}}">
		</div>

		<div class="form-group col-md-6">
			<label class="col-4" for="line2">Complément</label>
			<input type="text" class="col-7" name="line2" id="line2" placeholder="Appartement, Porte, Etage... ">
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
			<label class="col-4" for="postal_code">Code postal</label>
			<input type="text" class="col-7" name="postal_code" id="postal_code" value="{{customer.shipping_address.postal_code}}">
		</div>
		<div class="form-group col-md-6">
			<label class="col-4" for="city">Villes</label>
			<input type="text" class="col-7" name="city" id="city" value="{{customer.shipping_address.city}}">
		</div>
	</div>
	<div class="pull-right m-5">
		<input type="submit" class="btn btn-primary" value="Valider ma commande"/>
	</div>
</form>
